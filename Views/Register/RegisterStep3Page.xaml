<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuickCol.Views.Register.RegisterStep3Page"
             xmlns:viewModels="clr-namespace:QuickCol.ViewModels"
             Title="Register - Step 1"
             BackgroundColor="#D4DBE3">
    <ContentPage.BindingContext>
        <viewModels:RegisterViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="30" Spacing="20" VerticalOptions="CenterAndExpand">
        <!-- Bouton Suivant -->
        <Button Text="Generer un QR Code" Command="{Binding NextCommand}" 
            FontSize="Medium" 
            BackgroundColor="Green" 
            TextColor="White" 
            CornerRadius="8" 
            Padding="20" />

        <Label FontSize="18" Text="Vous utiliserez ce code lors des collecte pour presentez les informations liées à votre compte"/>
    </StackLayout>
</ContentPage>